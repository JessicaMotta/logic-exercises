algoritmo "Ex03"
var
   nome: caracter
   salario: real
inicio
   escreva("Nome do Funcionário: ")
   leia(nome)

   escreva("Salário do Funcionário: ")
   leia(Salario)
   
   escreval("===Resultado ===")
